@page
@model StudentsInformation.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Course Info";
}

<h1>Course Info</h1>

<p>
    <br />
    <a asp-page="Create">
        <button type="button" class="btn btn-outline-success">Create New</button>
   </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].LecturerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CourseID">
                        <button type="button" class="btn btn-warning">Edit</button>
                    </a> |
                    <a asp-page="./Details" asp-route-id="@item.CourseID">   <button type="button" class="btn btn-info">Details</button></a> |
                    <a asp-page="./Delete" asp-route-id="@item.CourseID">   <button type="button" class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
