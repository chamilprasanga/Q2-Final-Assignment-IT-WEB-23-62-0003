@page
@model StudentsInformation.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<br />
<h1>Course Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.LecturerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.LecturerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Students)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Student Name</th>
                    <th>City</th>
                </tr>
                @foreach (var item in Model.Course.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.CourseID"><button type="button" class="btn btn-warning">Edit</button></a> |
    <a asp-page="./Index">Back</a>
</div>
