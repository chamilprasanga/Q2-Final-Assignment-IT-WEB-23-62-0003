@page
@model StudentsInformation.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students Info";
}

<h1>Students Info</h1>

<p>
    <a asp-page="Create">
        <button type="button" class="btn btn-outline-success">Create New</button>
    </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Course)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.StudentId">
                        <button type="button" class="btn btn-warning">Edit</button>
                        
                    </a> |
                    <a asp-page="./Details" asp-route-id="@item.StudentId"> <button type="button" class="btn btn-info">Details</button></a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentId"> <button type="button" class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
